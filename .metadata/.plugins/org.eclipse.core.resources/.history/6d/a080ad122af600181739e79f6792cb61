package com.mth.dao;

import java.sql.Statement;
import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.mth.bean.User;

public class BUserDao {

	public List<User> getBUser(){
		//查询所有信息的数据库语句
		String sql = "select Bu_Phone,Bul_password from buy_user;";
	
		Connection conn = DBUtil.getConnection();
		
		List<User> userlist = new ArrayList<>();
		Statement stmt = null;
		ResultSet rs = null;
		try {
			stmt = conn.createStatement();
			
			rs = stmt.executeQuery(sql);
		while(rs.next()) {
			String Bu_phone = rs.getString("Bu_phone");
			String Bul_password = rs.getString("Bul_password");
			User user = new User(Bu_phone,Bul_password);
			userlist.add(user);
		}
		return userlist;
		}catch (SQLException e) {
			
			e.printStackTrace();
		} finally{
			//无论出错与否都关闭 资源
			DBUtil.close(conn, stmt, rs);
		}
		return null;
	}
	
	//新用户注册
	public void buy_add(String Bu_name,String Bu_phone,String Bu_sex,String Bu_age,String Bul_password) {
		String sql = "insert into buy_user(Bu_name,Bu_phone,Bu_sex,Bu_age,Bul_password) value(?,?,?,?,?);";
		
		Connection conn = DBUtil.getConnection();
		PreparedStatement pstmt = null;
		try {
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1,Bu_name );
			pstmt.setString(2, Bu_phone);
			pstmt.setString(3, Bu_sex);
			pstmt.setString(4, Bu_age);
			pstmt.setString(5, Bul_password);
			pstmt.executeUpdate();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}finally {
			DBUtil.close(conn, pstmt, null);
		}
		
	}
	//删除用户
	public boolean buy_delete(String Bu_name) {
		String sql= "delete from buy_user where Bu_name = ?";
		
		Connection conn =DBUtil.getConnection();
		PreparedStatement pstmt = null;
		try {
			pstmt = conn.prepareStatement(sql);
			pstmt.setString(1, Bu_name);
			pstmt.executeUpdate();
		} catch (SQLException e) {
			e.printStackTrace();
			return false;
		}finally {
			DBUtil.close(conn, pstmt, null);
		}
		return true;
	}
	
	
	/**
	 * 1.先输入要修改的用户信息，找到要修改的用户
	 * 2.输入新信息
	 */
	//public void bug_update() {
		//String sql = "update bug_user set ";
	//}
	
	public void buy_servlet(String Bu_name,String Bu_phone,String Bu_age,String Bu_sex) {
		String sql = "select * from bug_user where Bu_name = ? or Bu_phone = ? or Bu_age = ? or Bu_sex = ?";
		Connection conn = DBUtil.getConnection();
		PreparedStatement pstmt = null;
		try {
			pstmt =conn.prepareStatement(sql);
			pstmt.setString(1, Bu_name);
			pstmt.setString(2, Bu_phone);
			pstmt.setString(3, Bu_age);
			pstmt.setString(4, Bu_sex);
			pstmt.executeQuery();
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}finally {
			DBUtil.close(conn, pstmt, null);
		}
		
	}
	
	
	
	
	
	
	
	
	
	
}
